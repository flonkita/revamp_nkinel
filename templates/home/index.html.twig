{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

{% include "components/header.html.twig" %}


<section class="py-5">

{# Message flash lors de l'ajout au panier #}
                    {% for message in app.flashes('add_cart') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }} - Voir le <strong><a href="#">Panier</a></strong> 
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                    
      <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        {% if articles is empty %}
            <p><b>Il n'y a pas d'articles de dispo. Du moins pas encore...</b></p>
         {% else %}
       {% for article in articles %}
          <div class="col mb-5">
            <div class="card h-100">
            <!-- Sale badge-->
            {# <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">{{article.category.name|default('-')}}</div> #}
            <!-- Product image-->
                {% if article.image %}
                <img class="card-img-top" src="{{ asset('/img/articles/' ~ article.image) }}" alt="..." />
                {% else %}
                <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                {% endif %}
              <!-- Product details-->
              <div class="card-body p-4">
                <div class="text-center">
                  <!-- Product name-->
                  <h5 class="fw-bolder">{{article.nom}}</h5>
                  <!-- Product price-->
                  {{article.prix}} â‚¬
                </div>
              </div>

                <!-- Product actions-->
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                <div class="text-center">
                <a class="btn btn-outline-dark mt-auto" href="{{ path('article_detail', {id: article.id}) }}">Afficher</a>
                <a class="btn btn-outline-primary  mt-3" href="#">Ajouter au panier</a>
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
          {% endif %}
        </div>
      </div>
    </section>

{% endblock %}